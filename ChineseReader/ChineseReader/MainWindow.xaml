<Window x:Class="ChineseReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Czytnik chińskiego" Height="432" Width="525">
    <Grid>

        <TextBox x:Name="HZText" HorizontalAlignment="Left" Height="216" Margin="10,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" FontFamily="Arial Unicode MS" FontSize="24" SelectionChanged="HZText_SelectionChanged"/>
        <Button x:Name="Debug" Content="Debug" HorizontalAlignment="Left" Margin="432,288,0,0" VerticalAlignment="Top" Width="75" Click="Debug_Click" Visibility="Hidden"/>
        <MediaElement x:Name="audioElement" HorizontalAlignment="Left" Height="74" Margin="578,-30,-135,0" VerticalAlignment="Top" Width="74" />
        <Label Content="Umieść tutaj tekst w języku chinskim" HorizontalAlignment="Left" Margin="10,-1,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ExplainBox" HorizontalAlignment="Left" Height="77" Margin="10,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" FontSize="16" FontFamily="Arial Unicode MS" />
        <Label Content="Znaczenie" HorizontalAlignment="Left" Margin="10,246,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoadClip" Content="Wklej ze schowka" HorizontalAlignment="Left" Margin="10,354,0,0" VerticalAlignment="Top" Width="104" Click="LoadClip_Click"/>

    </Grid>
</Window>
